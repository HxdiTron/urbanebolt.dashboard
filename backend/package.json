{
  "name": "urbanebolt-tracking-backend",
  "version": "1.0.0",
  "description": "Production-ready tracking API backend for UrbaneBolt",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:api": "node dist/api/index.js",
    "start:worker": "node dist/workers/tracking-worker.js",
    "start:scheduler": "node dist/scheduler/sync-scheduler.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:api": "ts-node-dev --respawn src/api/index.ts",
    "dev:worker": "ts-node-dev --respawn src/workers/tracking-worker.ts",
    "dev:scheduler": "ts-node-dev --respawn src/scheduler/sync-scheduler.ts",
    "db:init": "psql $DATABASE_URL -f src/db/schema.sql",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "bullmq": "^5.1.0",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
